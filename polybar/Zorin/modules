[module/i3]
type = internal/i3
index-sort = true
strip-wsnumbers = true
enable-scroll = true
format = <label-state> <label-mode>
wrapping-scroll = false

ws-icon-0 = 1;ÔÑ†  Terminal
ws-icon-1 = 2;Ôâ©  Firefox
ws-icon-2 = 3;Ô¨•  Code
ws-icon-3 = 4;ÔÑî  File
ws-icon-4 = 5;Ôñ™  Blen|Gimp 
ws-icon-5 = 6;Ôáò  Telegram 
ws-icon-6 = 7;ÔÖ™  Video
ws-icon-7 = 8;ÔÄ∞  Pictures
ws-icon-8 = 9;ÔÜ≤  Virtual
ws-icon-9 = 10;Ô°∏  Other
ws-icon-default = Ôñ™

format-font = 0

label-mode = %mode%
label-mode-padding = 1
label-mode-background = ${colors.black}


; focused = Active workspace on focused monitor
label-focused = %icon%
label-focused-background = ${colors.foreground}
label-focused-foreground = ${colors.black}
label-focused-underline= ${colors.foreground}
label-focused-padding = 1

; unfocused = Inactive workspace on any monitor
label-unfocused = %icon%
label-unfocused-padding = 1
; –¶–≤–µ—Ç –Ω–µ –∞–∫—Ç–∏–≤–Ω–æ–≥–æ —Ä–∞–±–æ—á–µ–≥–æ –º–µ—Å—Ç–∞
label-unfocused-foreground = ${colors.foreground}
label-unfocused-background = ${colors.background}

; visible = Active workspace on unfocused monitor
label-visible = %icon%
label-visible-foreground = ${colors.background}
label-visible-background = ${colors.foreground}
label-visible-underline = ${colors.foreground}
label-visible-padding = 1

; urgent = Workspace with urgency hint set
label-urgent = %icon%
; –¶–≤–µ—Ç –æ–∫—Ä—ã–≤–∞—é—â–µ–≥–æ—Å—è —Ä–∞–±–æ—á–µ–≥–æ –º–µ—Å—Ç–∞
label-urgent-foreground = ${colors.foreground}
label-urgent-padding = 1
label-urgent-background = ${colors.background}

label-occupied = %icon%
label-occupied-foreground = ${colors.foreground}
label-occupied-padding = 1
label-occupied-background = ${colors.black}

label-empty = %icon%
label-empty-foreground = ${colors.foreground}
label-empty-padding = 1
label-empty-background = ${colors.black}


